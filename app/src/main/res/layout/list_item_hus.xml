<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:longClickable="true"
    android:weightSum="40">

    <TextView
        android:id="@+id/itemHus"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_weight="15"
        android:gravity="center"
        android:textAlignment="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="10">

        <TextView
            android:id="@+id/itemHusBeskrivelse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"/>

        <TextView
            android:id="@+id/itemHusGateadresse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" />

        <TextView
            android:id="@+id/itemHusEtasjer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_weight="15"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/buttonEditHus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:background="@drawable/edit_rounded_corners"
            android:gravity="center"
            android:padding="4dp"
            android:src="@drawable/ic_baseline_edit_24" />

        <ImageButton
            android:id="@+id/buttonDeleteHus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:background="@drawable/delete_rounded_corners"
            android:gravity="center"
            android:padding="4dp"
            android:src="@drawable/ic_baseline_delete_24" />

    </LinearLayout>

</LinearLayout>